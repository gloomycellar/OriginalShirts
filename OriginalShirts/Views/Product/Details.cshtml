            var details = {
                init: function () {
                    $("#addtoCart").click(this.onAddToCart)
                },

                onAddToCart: function () {
                    var quontity = $("#quontity").val();
                    var id = $("#productId").val();
                    var uri = "/cart/addtocart/?id=" + id + "&quontity=" + quontity;
                    $.get(uri).success(function (res) {

                    }).fail(function (res) {

                    })
                }
            }

            details.init();
        })(jQuery)

        $(function () {
            $("a[rel^='prettyPhoto']").prettyPhoto({
                default_width: 500,
                default_height: 344,
                markup: '<div class="pp_pic_holder"> \
