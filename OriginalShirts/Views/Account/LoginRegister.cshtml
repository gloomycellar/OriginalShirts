@using OriginalShirts.Models
@model LoginRegisterViewModel
@{
    ViewBag.Title = "Log in";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @style = "font-weight: bold; padding: 0" })

                        @Html.TextBoxFor(m => m.LoginViewModel.LoginEmail, new { @type = "email", @placeholder = "Email Address" })
                        @Html.PasswordFor(m => m.LoginViewModel.LoginPassword, new { @type = "password", @placeholder = "Password" })

                        <span>
                            @Html.CheckBoxFor(m => m.LoginViewModel.LoginRememberMe, new { @class = "checkbox" })
                            Keep me signed in
                        </span>

                        <button type="submit" class="btn btn-default">Login</button>
                    }
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @style = "font-weight: bold; padding: 0" })

                        @Html.TextBoxFor(m => m.RegisterViewModel.RegisterName, new { @placeholder = "Name" })
                        @Html.TextBoxFor(m => m.RegisterViewModel.RegisterEmail, new { @type = "email", @placeholder = "Email Address" })
                        @Html.PasswordFor(m => m.RegisterViewModel.RegisterPassword, new { @type = "password", @placeholder = "Password" })

                        <button type="submit" class="btn btn-default">Signup</button>
                    }                  
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
