@using OriginalShirts.Domain
@model Cart
@{
    ViewBag.Title = "Index";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>

        <div id="no-cart-items" style="@(Model.CartItems.Count > 0 ? "display:none" : "")">
            There's no items in your cart.
        </div>

        <div id="cart-items" class="table-responsive cart_info" style="@(Model.CartItems.Count == 0 ? "display:none" : "")">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr class="cart-item-@item.Id">
                            <td class="cart_product">
                                <a href="@Url.Action("Details", "Product", new { id = item.Product.Id })">
                                    <img src="@item.Product.Image?w=110&h=110&mode=crop" alt="">
                                </a>
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@item.Product.Name</a></h4>
                                <p>Web ID: @item.Product.Id</p>
                            </td>
                            <td class="cart_price">
                                <p>$@item.Product.Price</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <a class="cart_quantity_up" data-id="@item.Id" data-product-id="@item.Product.Id"> + </a>
                                    <input class="cart_quantity_input" data-id="@item.Id" type="text" name="quantity" value="@item.Quontity" autocomplete="off" size="2">
                                    <a class="cart_quantity_down" data-id="@item.Id" data-product-id="@item.Product.Id"> - </a>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">$@(item.Quontity * item.Product.Price)</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" data-id="@item.Id"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->
<section id="do_action">
    <div class="container">
        <div class="heading">
            <h3>What would you like to do next?</h3>
            <p>Choose if you have a discount code or reward points you want to use or would like to estimate your delivery cost.</p>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="chose_area">
                    <ul class="user_option">
                        <li>
                            <input type="checkbox">
                            <label>Use Coupon Code</label>
                        </li>
                        <li>
                            <input type="checkbox">
                            <label>Use Gift Voucher</label>
                        </li>
                        <li>
                            <input type="checkbox">
                            <label>Estimate Shipping & Taxes</label>
                        </li>
                    </ul>
                    <ul class="user_info">
                        <li class="single_field">
                            <label>Country:</label>
                            <select>
                                <option>United States</option>
                                <option>Bangladesh</option>
                                <option>UK</option>
                                <option>India</option>
                                <option>Pakistan</option>
                                <option>Ucrane</option>
                                <option>Canada</option>
                                <option>Dubai</option>
                            </select>

                        </li>
                        <li class="single_field">
                            <label>Region / State:</label>
                            <select>
                                <option>Select</option>
                                <option>Dhaka</option>
                                <option>London</option>
                                <option>Dillih</option>
                                <option>Lahore</option>
                                <option>Alaska</option>
                                <option>Canada</option>
                                <option>Dubai</option>
                            </select>

                        </li>
                        <li class="single_field zip-field">
                            <label>Zip Code:</label>
                            <input type="text">
                        </li>
                    </ul>
                    <a class="btn btn-default update" href="">Get Quotes</a>
                    <a class="btn btn-default check_out" href="">Continue</a>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="total_area">
                    <ul>
                        <li>Cart Sub Total <span>$59</span></li>
                        <li>Eco Tax <span>$2</span></li>
                        <li>Shipping Cost <span>Free</span></li>
                        <li>Total <span>$61</span></li>
                    </ul>
                    <a class="btn btn-default update" href="">Update</a>
                    <a class="btn btn-default check_out" href="/cart/checkout">Check Out</a>
                </div>
            </div>
        </div>
    </div>
</section><!--/#do_action-->
@section scripts{
    <script>
        (function ($) {
            var Cart = {
                init: function () {
                    $(".cart_quantity_input").keypress(this.validate);

                    $(".cart_quantity_input").focusout(this.onSetProductCount);
                    $(".cart_quantity_delete").click(this.onRemoveCartItem);

                    $(".cart_quantity_up").click(this.onIncreaceCount);
                    $(".cart_quantity_down").click(this.onDecreaceCount);
                },

                onSetProductCount: function (e) {
                    var id = $(e.delegateTarget).attr("data-id");
                    var quontity = +$(e.delegateTarget).val();
                    var uri = "/cart/SetQuontity/?id=" + id + "&quontity=" + quontity;
                    $.get(uri).success(function (res) {
                        Cart.checkCartItemRow(id, res);
                    });
                },

                onIncreaceCount: function (e) {
                    var id = $(e.delegateTarget).attr("data-id");
                    var productId = $(e.delegateTarget).attr("data-product-id");
                    var uri = "/cart/addtocart/?id=" + productId + "&quontity=1";
                    $.get(uri).success(function (res) {
                        Cart.checkCartItemRow(id, res);
                    });
                },

                onDecreaceCount: function (e) {
                    var id = $(e.delegateTarget).attr("data-id");
                    var productId = $(e.delegateTarget).attr("data-product-id");
                    var uri = "/cart/RemoveFromCart/?id=" + productId + "&quontity=1";
                    $.get(uri).success(function (res) {
                        Cart.checkCartItemRow(id, res);
                    });
                },

                checkCartItemRow: function (id, cart) {
                    var cartItem = $.grep(cart.CartItems, function (e) { return e.Id == id; })[0];

                    if (cartItem && cartItem.Quontity > 0) {
                        $(".cart-item-" + id + " .cart_quantity_input").val(cartItem.Quontity);
                        var totalString = "$" + (cartItem.Quontity * cartItem.Product.Price) + ".00";
                        $(".cart-item-" + id + " .cart_total_price").text(totalString);
                    } else {
                        $(".cart-item-" + id).remove();
                        if (cart.CartItems.length == 0) {
                            $("#no-cart-items").show()
                            $("#cart-items").hide()
                        }
                    }

                    BudgeCart.reload();
                },

                onRemoveCartItem: function (e) {
                    var id = $(e.delegateTarget).attr("data-id");
                    var uri = "/cart/RemoveCartItemt/?id=" + id;
                    $.get(uri).success(function (res) {
                        if (res.CartItems.length > 0) {
                            $(".cart-item-" + id).remove();
                        }
                        else {
                            $("#no-cart-items").show()
                            $("#cart-items").hide()
                        }

                        BudgeCart.reload();
                    })
                },

                validate: function (evt) {
                    var theEvent = evt || window.event;
                    var key = theEvent.keyCode || theEvent.which;
                    key = String.fromCharCode(key);
                    var regex = /[0-9]|\./;
                    if (!regex.test(key)) {
                        theEvent.returnValue = false;
                        if (theEvent.preventDefault) theEvent.preventDefault();
                    }
                }
            }

            Cart.init();
        })(jQuery)
    </script>
}