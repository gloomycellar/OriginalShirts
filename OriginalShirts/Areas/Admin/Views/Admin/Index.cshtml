
@{
    ViewBag.Title = "Index";
}


<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <div class="media">
                <div class="media-left media-middle">
                    <a href="#">
                        @*<img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">*@
                        <img class="media-object"
                             data-src="holder.js/128x128" alt="@item.Name"
                             src="@item.Image?h=128&w=128&mode=crop" 
                             data-holder-rendered="true"
                             style="width: 128px; height: 128px;">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading"><span>ID:@item.Id</span> Name:@item.Name</h4>
                    <span>Price: @item.Price</span>
                    <span>Size: @item.Size</span>
                    <span>Color: @item.Color</span>
                    <p>
                        Tags:
                        @foreach (var tag in item.Tags)
                        {
                            <span>@tag.Name</span>
                        }
                    </p>

                </div>
            </div>
        </li>
    }
</ul>

